<div class="card m-3 bg-light">

  <div class="card-header">
    <h5>{{list.name}}</h5>
  </div>

  <div class="card-body">

    {{#if hasNotes}}
    <div class="px-3 pb-2">
      <strong>Notes: </strong>
      {{list.notes}}
    </div>
    {{/if}}

    {{#if hasItems}}
    <ul class="list-group p-2">
      {{#each items}}
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          {{this.name}}
          <span class="badge bg-info rounded-pill ms-1">3</span>
        </div>
        <div>
          <a href="#" class="btn btn-info">
            <i class="bi bi-plus-lg"></i>
          </a>
          <a href="/lists/{{this.listId}}/items/delete/{{this.id}}" class="btn btn-danger">
            <i class="bi bi-trash"></i>
          </a>
        </div>
      </li>
      {{/each}}
    </ul>

    <div class="d-flex justify-content-center">
      <a href="/lists/{{list.id}}/items/new" class="btn btn-info my-2">
        Add Item!
      </a>
    </div>
    {{else}}
    <ul class="list-gruop p-2">
      <li class="list-group-item">
        <div class="d-flex flex-column justify-content-center align-items-center">
          <p class="">There are not any items in this list</p>
          <a href="/lists/{{list.id}}/items/new" class="btn btn-info">
            Add One!
          </a>
        </div>
      </li>
    </ul>
    {{/if}}
  </div>
  
</div>