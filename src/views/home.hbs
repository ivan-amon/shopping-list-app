<div class="container pt-4 p-3">
  <div class="row">

    {{#each lists}}
    <div class="col-md-4 mb-3">
      <div class="card text-center bg-light">
        <div class="card-body">

          <h3 class="card-title text-capitalize mb-2">{{ this.name }}</h3>

          <div class="mb-1">
            <span>15 items</span>
            <span class="ms-2">{{ this.date }}</span>
          </div>

          <div class="mb-3">
            <label class="form-check-label me-2" for="completedCheckbox">Completed:</label>
            <input class="form-check-input" type="checkbox" id="completedCheckbox">
          </div>

          <div class="d-flex justify-content-center flex-wrap gap-2">
            <a href="#" class="btn btn-secondary">Show Items</a>
            <a href="#" class="btn btn-secondary">Add Item</a>
            <a href="#" class="btn btn-info">
              <i class="bi bi-pencil-square"></i>
            </a>
            <a href="#" class="btn btn-danger">
              <i class="bi bi-trash"></i>
            </a>
          </div>

        </div>
      </div>
    </div>
    {{/each}}

  </div>
</div>