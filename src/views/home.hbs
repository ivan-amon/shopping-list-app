<section class="container p-3">
  <div class="row">

    {{#if hasLists}}
      {{#each lists}}
      <div class="col-md-4 mb-4">
        <div class="card text-center bg-light h-100">
          <div class="card-body list-card">

            <h5 class="card-title text-capitalize mb-2">{{ this.name }}</h5>

            <div class="bottom-section">
              <div class="mb-1">
                <span>{{ this.numItems }} items</span>
                <span class="ms-2">{{ this.date }}</span>
              </div>

              <div class="mb-3">
                <label class="form-check-label me-2" for="completedCheckbox">Completed:</label>
                <input class="form-check-input" type="checkbox" id="completedCheckbox">
              </div>

              <div class="d-flex justify-content-center flex-wrap gap-2">
                <a href="/lists/{{this.id}}/items" class="btn btn-secondary">Show Items</a>
                <a href="/lists/{{this.id}}/items/new" class="btn btn-secondary">Add Item</a>
                <a href="/lists/edit/{{this.id}}" class="btn btn-info">
                  <i class="bi bi-pencil-square"></i>
                </a>
                <a href="/lists/delete/{{this.id}}" class="btn btn-danger">
                  <i class="bi bi-trash"></i>
                </a>
              </div>
            </div>

          </div>
        </div>
      </div>
      {{/each}}

      <div class="col-md-4 mb-3">
        <a href="/lists/new">
          <div class="card text-center bg-light h-100">
            <div class="card-body add-list-card">
              <i class="bi bi-plus-lg add-list-icon"></i>
            </div>
          </div>
        </a>
      </div>
    {{else}}
      <div class="container py-5">
        <div class="row justify-content-center">
          <div class="col-lg-8">
            <div class="card border-0 shadow-lg">
              <div class="card-body p-5 text-center">
                <i class="bi bi-list-check display-4 text-primary mb-3"></i>
                <h2 class="fw-bold mb-2">You donâ€™t have any lists</h2>
                <p class="lead text-muted mb-4">Create your first list to get started</p>
                <a href="/lists/new" class="btn btn-primary btn-lg">
                  <i class="bi bi-plus-lg me-2"></i>Add list
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    {{/if}}
    

  </div>
</section>
<script>
  document.querySelectorAll('.card-title').forEach(title => {
    const maxLength = 22;
    if (title.textContent.length > maxLength) {
      title.textContent = title.textContent.slice(0, maxLength) + '...';
    }
  });
</script>